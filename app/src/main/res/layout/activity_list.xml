<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="151dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:onClick="doSurvey"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#999999"
                android:scaleX="0.8"
                android:scaleY="0.8">

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="start"
                    android:text="설문조사를 하는 이유가 뭘까?"
                    android:textSize="20dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="3dp">
                </TextView>

                <TextView
                    android:id="@+id/list_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="설문조사에 참가하시는 분 매사에 적극적이고 사교성이 깊고 잘 생겼을 거라고 생각합니다!"
                    android:textSize="15dp"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:paddingTop="3dp">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="19dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/list_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="19.10.22"
                        android:textSize="19dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="3dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="~"
                        android:textSize="19dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="3dp">
                    </TextView>

                    <TextView
                        android:id="@+id/list_finish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="19.10.25"
                        android:textSize="19dp"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:paddingTop="3dp">
                    </TextView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite">
        </ImageView>

    </LinearLayout>
</LinearLayout>